{
  "name": "mojaloop-reporting-hub-bop-api",
  "version": "1.0.0",
  "description": "Reporting API",
  "scripts": {
    "audit:check": "SHELL=sh check-audit",
    "lint:fix": "eslint . --fix",
    "test": "jest test/**/*.test.js",
    "test:integration": "jest test/integration",
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpile-only ./src",
    "generate_": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate": "npm -s run generate:prisma",
    "prismix": "npx prismix && prisma format",
    "generate:nexus": "ts-node --transpile-only ./src/schema",
    "generate:prisma": "prisma generate --schema prisma/centralLedger.prisma && prisma generate --schema prisma/eventStore.prisma",
    "prisma:validate": "prisma validate --schema prisma/centralLedger.prisma && prisma validate --schema prisma/eventStore.prisma",
    "prisma:format": "prisma format --schema prisma/centralLedger.prisma",
    "prisma:pull": "prisma db pull --schema prisma/centralLedger.prisma",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "clean": "rimraf dist",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/reporting-hub-bop-api-svc.git"
  },
  "author": "Yevhen Kyriukha <yevhen.kyriukha@modusbox.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/reporting-hub-bop-api-svc/issues"
  },
  "homepage": "https://github.com/mojaloop/reporting-hub-bop-api-svc#readme",
  "devDependencies": {
    "@types/node": "16.4.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "cross-env": "7.0.3",
    "esbuild-node-tsc": "^1.6.0",
    "esbuild-register": "^2.6.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "prisma": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-node": "10.1.0",
    "ts-node-dev": "1.1.8",
    "tsc-alias": "^1.3.7",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "@prisma/client": "^3.0.2",
    "apollo-server": "^3.3.0",
    "apollo-server-core": "^3.3.0",
    "dataloader": "^2.0.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.1",
    "env-var": "^7.0.1",
    "graphql-parse-resolve-info": "^4.12.0",
    "graphql-rate-limit": "^3.1.0",
    "graphql-scalars": "^1.10.0",
    "js-yaml": "^4.1.0",
    "nexus": "1.1.0",
    "prismix": "^1.0.19",
    "tsconfig-paths": "^3.11.0",
    "winston": "^3.3.3"
  }
}
